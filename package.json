{
  "name": "sodiumjs",
  "version": "1.1.0",
  "description": "A Functional Reactive Programming (FRP) library for JavaScript",
  "author": "Stephen Blackheath",
  "license": "BSD-3-Clause",
  "homepage": "https://github.com/SodiumFRP/sodium-typescript",
  "repository": {
    "type": "git",
    "url": "https://github.com/SodiumFRP/sodium-typescript.git"
  },
  "bugs": {
    "url": "https://github.com/SodiumFRP/sodium-typescript/issues"
  },
  "keywords": [
    "frp",
    "functional",
    "reactive",
    "typescript",
    "sodium"
  ],
  "main": "dist/sodium.cjs.js",
  "module": "dist/sodium.esm.js",
  "typings": "./dist/Sodium.d.ts",
  "scripts": {
    "clean": "rimraf ./dist",
    "build": "npm-run-all clean rollup:build rollup:build:umd",
    "dev": "npm-run-all -s clean -p flatbuffers:watch rollup:watch",
    "rollup:build": "cross-env NODE_ENV=production rollup -c rollup.config.js",
    "rollup:build:umd": "cross-env NODE_ENV=production rollup -c rollup.config.umd.js",
    "rollup:watch": "cross-env NODE_ENV=production rollup -c -w",
    "test": "jest",
    "test:clear": "jest --clearCache",
    "test:external": "live-server --mount=/dist:./dist ./src/tests/external-browser",
    "flatbuffers:watch": "node ./build-utils/flatbuffers.js --watch",
    "flatbuffers:clean": "node ./build-utils/flatbuffers.js --clean",
    "flatbuffers:build": "node ./build-utils/flatbuffers.js --build"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ]
  },
  "devDependencies": {
    "@types/jest": "22.0.0",
    "@types/node": "^8.5.2",
    "cross-env": "^5.1.3",
    "fantasy-laws": "git://github.com/fantasyland/fantasy-laws.git#davidchambers/everything",
    "jest": "22.0.4",
    "jsverify": "^0.8.3",
    "live-server": "1.2.0",
    "minify": "3.0.2",
    "npm-run-all": "4.1.2",
    "rimraf": "^2.6.2",
    "rollup": "0.53.3",
    "rollup-plugin-replace": "2.0.0",
    "rollup-plugin-typescript2": "0.9.0",
    "rollup-plugin-uglify": "2.0.1",
    "sanctuary": "^0.14.1",
    "ts-jest": "22.0.0",
    "ts-node": "4.1.0",
    "typescript": "^2.6.2",
    "uglify-es": "3.3.4"
  },
  "dependencies": {
    "typescript-collections": "^1.2.5",
    "sanctuary-type-classes": "^7.1.1"
  }
}
